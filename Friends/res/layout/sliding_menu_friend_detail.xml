<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/hide_imageview"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_margin="10.0dip"
        android:src="@drawable/graphic_messaging_bubble_arrow_left"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20.0dip" >

        <ImageView
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_gravity="center"
            android:layout_margin="30.0dip"
            android:src="@drawable/icon_comment" />

        <ImageView
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:src="@drawable/icon_friend" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50.0dip"
                android:layout_marginTop="20.0dip"
                android:text="共发信息0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="90.0dip"
                android:layout_marginTop="20.0dip"
                android:text="搭桥成功0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="90.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@color/light_grey"
                android:padding="4.0dip"
                android:text="拉黑名单" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40.0dip"
                android:layout_marginTop="20.0dip"
                android:text="被拉黑0" />
        </LinearLayout>
    </FrameLayout>
    
    <ListView 
        android:id="@+id/detail_listview"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"></ListView>

   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/call_imageview"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="50.0dip"
            android:padding="10.0dip"
            android:src="@drawable/icon_call"
            />
        <View 
            android:layout_width="1.0dip"
            android:layout_height="match_parent"
            android:background="@color/light_grey"/>
        <ImageView 
            android:id="@+id/sms_imageview"
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:padding="10.0dip"
            android:layout_weight="1"
            android:src="@drawable/icon_sms"/>
        
        
    </LinearLayout>
</LinearLayout>